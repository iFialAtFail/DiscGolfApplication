<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manleysoftware.michael.discgolfapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/mdgt_darker"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MenuTheme">
        <activity android:name=".ui.main.MainMenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.RuntimeGameActivity"
            android:theme="@style/NoActionBarTheme"/>
        <activity android:name=".ui.view.CourseEditorMenuActivity"/>
        <activity android:name=".ui.view.EditExistingCourseActivity"/>
        <activity android:name=".ui.player.EditExistingPlayerActivity"
            android:windowSoftInputMode="adjustResize"
            />
        <activity android:name=".ui.view.CoursePickerActivity"/>
        <activity android:name=".ui.view.AddCourseMenuActivity"/>
        <activity android:name=".ui.player.PlayerListActivity"/>
        <activity android:name=".ui.player.PlayerEditorActivity"
            android:windowSoftInputMode="adjustResize"
            />
        <activity android:name=".ui.main.RoundPlayerPickerActivity"/>
        <activity android:name=".ui.scorecard.FinishedScorecardsActivity"/>
        <activity android:name=".ui.scorecard.UnfinishedScorecardsActivity"/>
        <activity android:name=".ui.scorecard.ScorecardOverview"
                  android:screenOrientation="landscape"/>
    </application>

</manifest>