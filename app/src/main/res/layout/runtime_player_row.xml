<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3"
        android:id="@+id/tvCurrentPar"
        android:layout_below="@+id/tvPlayerName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:background="@drawable/cell_shape" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Player Name"
        android:id="@+id/tvPlayerName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="+"
        android:id="@+id/btnIncrementParInList"
        android:layout_below="@+id/tvPlayerName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="35sp"
        android:background="@drawable/cell_shape" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="-"
        android:id="@+id/btnDecrementParInList"
        android:layout_alignTop="@+id/btnIncrementParInList"
        android:layout_toLeftOf="@+id/btnIncrementParInList"
        android:layout_toStartOf="@+id/btnIncrementParInList"
        android:background="@drawable/cell_shape"
        android:textSize="50sp" />

</RelativeLayout>